Here come the articles
    <%= link_to "New", new_article_path%>
<h1><%= @articles.count %> Articles</h1>
<%= form_tag articles_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find an article"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<div class="articles">
<% @articles.order(created_at: :desc).each do |article| %>
    <div class="article">
        <h4><%= link_to article.title, article_path(article) %></h4>
        <p><%= article.impressionist_count %></p>
        <p><%= article.user.first_name %></p>
        <p><%= article.publish_date %></p>
        <%= link_to "Edit", edit_article_path(article)%>
        <%= link_to "Show", article_path(article)%>
        <% if article.user == current_user %>
            <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: 'Are you sure?' }%>
        <% end %>
    </div>
<% end %>
</div>
