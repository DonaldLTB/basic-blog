<h1>Edit Article</h1>
<div>
    <%= simple_form_for [ @user, @article ] do |f| %>
        <%= f.input :title %>
        <%= f.input :public, label: 'Is Published', as: :boolean, checked_value: true %>
        <%= f.input :publish_date, as: :date, html5: true %>
        <%= f.input :content %>
        <%= f.submit "Save" %>
    <% end %>
</div>